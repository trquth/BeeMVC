<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>BEE MANAGER</title>
    <script src="~/Scripts/jquery-2.1.4.js"></script>
    <script src="~/Scripts/sweetalert.min.js"></script>
    <!-- Bootstrap Core CSS -->
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/sweetalert.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/css/business-frontpage.css" rel="stylesheet" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnCreate").click(function () {
                $.ajax({
                    url: '/BeeManager/CreateBee',
                    data: {},
                    type: 'GET',
                    success: function (data) {
                        $("#bee-list").empty();
                        $("#bee-list").append(data);
                    },
                    error: function () {
                        swal({ title: "", text: "Error!!", timer: 2000, showConfirmButton: false });
                    }

                });
            });
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnDamage").click(function () {
                $.ajax({
                    url: '/BeeManager/DemageBee',
                    data: {},
                    type: 'GET',
                    success: function (data) {
                        $("#bee-list").empty();
                        $("#bee-list").append(data);
                    },
                    error: function () {
                        swal({ title: "", text: "Error!!", timer: 2000, showConfirmButton: false });
                    }

                });
            });
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnSave").click(function () {
                $.ajax({
                    url: '/BeeManager/SaveBees',
                    data: {},
                    type: 'GET',
                    success: function (data) {
                        if (data == "") {
                            swal({ title: "", text: "Error!!", timer: 2000, showConfirmButton: false });
                        } else {
                            $("#bee-list").empty();
                            $("#bee-list").append(data);
                            swal({ title: "", text: "Successful", timer: 2000, showConfirmButton: false });
                        }

                    },
                    error: function () {
                        swal({ title: "", text: "Error!!", timer: 2000, showConfirmButton: false });
                    }

                });
            });
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnLoad").click(function () {
                $.ajax({
                    url: '/BeeManager/LoadBees',
                    data: {},
                    type: 'GET',
                    success: function (data) {
                        if (data == "") {
                            swal({ title: "", text: "Error!!", timer: 2000, showConfirmButton: false });
                        } else {
                            $("#bee-list").empty();
                            $("#bee-list").append(data);
                            swal({ title: "", text: "Successful", timer: 2000, showConfirmButton: false });
                        }

                    },
                    error: function () {
                        swal({ title: "", text: "Error!!", timer: 2000, showConfirmButton: false });
                    }

                });
            });
        });
    </script>
</head>
<body>
    <!-- Navigation -->
    
    <!-- Page Content -->
    <div class="container">
        <hr>
        <div class="row">
            <div class="col-lg-12">
                <button type="button" class="btn btn-default  right" aria-label="Left Align" id="btnLoad">Load from database</button>
                <button type="button" class="btn btn-default  right" aria-label="Left Align" id="btnCreate">Create random bees</button>
                <button type="button" class="btn btn-default  right" aria-label="Left Align" id="btnDamage"> Damage</button>
                <button type="button" class="btn btn-default  right" aria-label="Left Align" id="btnSave">Save Bees</button>
            </div>
            <div class="col-lg-12">
                @RenderBody()
            </div>
        </div>
        <hr>
        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Trần Quan Thiện 1151020157</p>
                </div>
            </div>
            <!-- /.row -->
        </footer>
    </div>
</body>
</html>
